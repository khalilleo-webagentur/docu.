{% extends 'layout/base.html.twig' %}

{% block title %} {{appName()}} {% endblock %}

{% block body %}

{% include 'layout/navbar.html.twig' %}

{% include 'component/custom_type_message_top_fixed.html.twig' %}

<div class="container-fluid bg-warning shadow-sm">
    <div class="container py-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <h4 class="py-2">Docu.</h4>
                <p>What you need to get your documentation online.</p>

                {% include 'docu/partial/search_form.html.twig' %}

            </div>
        </div>
    </div>
</div>

<div class="container my-5 pb-5">
    <div class="row row-cols-1 row-cols-lg-3 g-3">

        {% if count(catigories) > 0 %}
        {% for row in catigories %}
        <div class="col">
            <a href="{{path('app_docu_catigory_name', {name:slug(row.name)})}}" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm pb-2">
                    <div class="card-body">
                        <h5 class="py-2">{{row.name}}</h5>
                        <p class="card-text text-secondary a-primaray-hover" title="{{row.description}}">
                            {{row.description|slice(0, 87) ~ '..'}} <span
                                class="bi bi-arrow-right text-primary ps-2"></span>
                        </p>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
        {% endif %}

    </div>
</div>

<div class="container-fulid bg-white mb-3 pb-3">
    <div class="container pb-3">
        <div class="row mt-5">
            <div class="row py-5 text-center">

                <div class="col-md-12">
                    <h4>Do you have any questions?</h4>
                    <p>Contact us personally or send us an e-mail, we will be happy to help you!</p>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-lg-3 g-3 text-center pt-1 pb-5 mb-3">
            <div class="col">
                <div class="card border-warning">
                    <div class="card-body">
                        <h6 class="pt-1 text-warning">
                            <span class="bi bi-phone"></span> (+49) 163 / 616-53-96
                        </h6>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card border-warning">
                    <div class="card-body">
                        <h6 class="pt-1 text-warning">
                            <span class="bi bi-envelope"></span> support@khalilleo.com
                        </h6>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card border-warning">
                    <div class="card-body">
                        <h6 class="pt-1 text-warning">
                            <a href="{{path('app_contact_us_index')}}" class="text-warning text-decoration-none"><span
                                    class="bi bi-arrow-right-circle"></span> To the contat-us
                            </a>
                        </h6>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

{% include 'layout/footer.html.twig' %}

{% endblock %}