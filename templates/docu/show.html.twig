{% extends 'layout/base.html.twig' %}

{% block title %} {{appName()}} :: {{catigory.name}} {% endblock %}

{% block body %}

{% include 'layout/navbar.html.twig' %}

{% include 'component/custom_type_message_top_fixed.html.twig' %}

<div class="container-fluid bg-warning">
    <div class="container pt-3">
        <div class="row py-2 justify-content-center text-center">
            <div class="col-lg-6">
                <div class="d-block mx-auto">
                    <form class="w-100">
                        <div class="input-group mb-3">
                            <input type="search" class="form-control" placeholder="Search the Docs .."
                                aria-label="Search the Docs .." aria-describedby="button-addon2">
                            <button class="btn btn-white bg-white" type="button" id="button-addon2"><span
                                    class="bi bi-search"></span></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row pb-5">
        <div class="col-lg-3 mb-3">

            <div class="bg-white p-2 overflow-auto" style="height: 71vh;">
                {% if count(catigories) > 0 %}
                {% for row in catigories %}

                <br><b>{{row.name}}</b><br>

                {% for item in row.items %}
                <a href="{{path('app_docu_item_name', {slug:slug(item.slug)})}}" class="text-decoration-none">
                    <span class="pe-1 ps-2">-</span> {{item.slug}}
                </a><br>
                {% endfor %}

                {% endfor %}
                {% endif %}
            </div>

        </div>
        <div class="col-lg-6 mb-3">

            <h4>{{catigory.name}} > {{slug}}</h4>

            <p class="text-secondary">{{catigory.description}}</p>

            {% if item is defined and item %}
            <div class="p-2">
                {{item.content}}
            </div>
            {% endif %}

            <hr>

            <div class="row mb-3">
                <div class="col">
                    <a href="#" class="text-decoration-none text-success">Go to Privious item</a>
                </div>
                <div class="col">
                    <div class="float-end">
                        <a href="#" class="text-decoration-none text-success">Go to Next item</a>
                    </div>
                </div>
            </div>

            <div class="row text-center bg-white py-5">
                <div class="col">
                    <h5 class="mb-3">Was this article helpful?</h5>
                    <button class="btn btn-success w-25">Yes</button>
                    <button class="btn btn-secondary w-25">No</button>
                </div>
            </div>

        </div>

        <div class="col-lg-3">
            <div class="md-d-none py-4">
                {% for item in catigory.items %}
                <div class="p-1">
                    <a href="{{path('app_docu_item_name', {slug:slug(item.slug)})}}" class="text-decoration-none">
                        {{item.slug}}
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% include 'layout/footer.html.twig' %}

{% endblock %}