{% extends 'layout/base.html.twig' %}

{% block title %} {{appName()}} :: Search {% endblock %}

{% block body %}

{% include 'layout/navbar.html.twig' %}

{% include 'component/custom_type_message_top_fixed.html.twig' %}

<div class="container-fluid bg-warning">
    <div class="container py-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <h4 class="py-2">Documentation</h4>
                <p>What you need to get your documentation online.</p>

                {% include 'docu/partial/search_form.html.twig' %}

            </div>
        </div>
    </div>
</div>

<div class="container my-5 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {% if count(catigories) > 0 %}
            <p>Search Results for "<span class="text-success">
                    {{keyword is defined and keyword ? keyword : ''}}</span>"
            </p>
            {% for row in catigories %}
            <div class="bg-white p-2 p-lg-3 mb-2">
                <h5 class="py-2">{{row.name}}</h5>
                <a href="{{path('app_docu_catigory_name', {name:slug(row.name)})}}" class="text-secondary">
                    {{row.description}}
                </a>
            </div>
            {% endfor %}
            {% else %}
            <div class="bg-white p-2 p-lg-3 mb-2">
                <p>No Search Results for "<span class="text-danger">
                        {{keyword is defined and keyword ? keyword : ''}}</span>"
                </p>
            </div>
            {% endif %}
            <a href="{{path('app_docu_home')}}" class="text-decoration-none">
                <span class="bi bi-arrow-left-circle-fill pe-1"></span> Back to Homepage
            </a>
        </div>
    </div>
</div>

{% include 'layout/footer.html.twig' %}

{% endblock %}