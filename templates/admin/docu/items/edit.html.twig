{% extends 'admin/layout/base.html.twig' %}

{% block title %} Dashboard :: Edit Item Details {% endblock %}

{% block body %}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-8">
                    <h4 class="m-0 text-dark">Edit Item Details</h4>
                </div>
                <div class="col-4">
                    <div class="breadcrumb float-right">
                        <a href="{{path('app_admin_docu_items_index')}}" class="text-secondary">
                            Close <span class="fa fa-window-close"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid area-section">

            <div class="row">
                <div class="col-lg-12">
                    <form action="{{path('app_admin_docu_item_store', {id:item.id})}}" method="post">

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="V9xO3aD7v" class="form-label">Title <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="V9xO3aD7v" placeholder="{{item.slug}}"
                                        value="{{item.slug}}" name="slug" required>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="mb-3">
                                    <label for="iwO7nM4yT4bG2sO5i">Catigory <span class="text-danger">*</span></label>
                                    <select class="form-control" id="iwO7nM4yT4bG2sO5i" name="catigoryId">
                                        {% for key, row in catigories %}
                                        <option value="{{ row.id }}" {{item.catigory.name==row.name ? 'selected' : ''}}>
                                            {{ row.name}}
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-1">
                                <div class="mb-3">
                                    <label for="kkwO7nM4yT4bG2sO5i">Read Time <span class="text-danger">*</span></label>
                                    <select class="form-control" id="kkwO7nM4yT4bG2sO5i" name="readTime">
                                        {% for key, readTime in readTimes %}
                                        <option value="{{ readTime }}" {{readTime==item.readTime ? 'selected' : ''}}>
                                            {{ readTime }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-1">
                                <div class="mb-3">
                                    <label for="V9xO3aD7v" class="form-label">Likes</label>
                                    <input type="number" class="form-control" id="V9xO3aD7v" min="0"
                                        placeholder="{{item.likes}}" value="{{item.likes}}" name="likes">
                                </div>
                            </div>
                            <div class="col-lg-1">
                                <div class="mb-3">
                                    <label for="V9xO3aD7v" class="form-label">disLikes</label>
                                    <input type="number" class="form-control" id="V9xO3aD7v" min="0"
                                        placeholder="{{item.disLikes}}" value="{{item.disLikes}}" name="disLikes">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div id="editor" class="bg-white">{{item.content|raw}}</div>
                            <input type="hidden" name="content" id="content">
                        </div>

                        <div class="my-3">
                            <button class="btn btn-success" id="formSave">Save Changes<span
                                    class="fa fa-check-circle fa-sm pl-1"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>
</div>

{% endblock %}