<div class="card-body table-responsive bg-white p-0 mb-3">
    <table class="table table-hover text-nowrap">
        <thead>
        <tr class="fs-14">
            <th>#</th>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'Description'|trans }}</th>
            <th>{{ 'Updated'|trans }}</th>
            <th>{{ 'Created'|trans }}</th>
            <th>{{ 'Action'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for row in categories %}
            <tr class="fs-14">
                <td>{{ row.id }}</td>
                <td>{{ row.name|capitalize }}</td>
                <td>
                    <span title="{{ row.description }}">{{ row.description|slice(0, 35) ~ '...' }}</span>
                </td>

                <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>

                <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>

                <td>
                    <a href="{{ path('app_admin_doc_category_edit', {id:row.id}) }}">
                        <span class="fa fa-edit fa-sm"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>